#======================================
# Child inherits from parent suite
#======================================
m_arg_1a 

#======================================
# Child overrides parent var
#======================================
m_arg_2a(-v MSV1="vor1" -v MSV2="vor2")

#======================================
# Child not affected by previous override
#======================================
m_arg_1a 


