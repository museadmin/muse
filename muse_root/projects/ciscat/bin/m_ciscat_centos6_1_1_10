#! /bin/bash
##############################################################
##
## Name         :   m_ciscat_centos6_1_1_10
## Author       :   Bradley Atkins
## Description  :   1.1.10 Add nodev Option to /home (Scored)
## Date         :   23/09/2014
## Args         :   
## Status       :   Reviewed    [n]
##                  Tested      [n]
##                  Released    [n]
##
## M_JOB_HOST
## M_GREP_PATTERN "^[[:alnum:]]+: |^/.*: |error|info|warning"
##
##############################################################
SCRIPT_NAME=m_ciscat_centos6_1_1_10

CISCAT_REPORT="${M_CISCAT_REPORT}/${SCRIPT_NAME}"
RESULT="Passed|1|1.1.10|Add nodev Option to /home|1"

m_print_marker ${C_EXCLUSION_MARKER} 

if [[ -z $(mount | grep /home) ]]
then
    RESULT="Failed|1|1.1.10|Add nodev Option to /home|-1"
fi

echo "${RESULT}" >> "${CISCAT_REPORT}"

m_print_marker ${C_EXCLUSION_MARKER}

