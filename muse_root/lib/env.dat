#======================================
# muse structure and files
#======================================
set -a

M_RUN_ROOT="/var/tmp/muse" 
M_SLAVE_USR=museslave
M_MUSEDEV=musedev
M_MUSEADMIN=museadmin

#======================================
# Error Control
#======================================
M_NO_ERROR_RECURSION=false

#======================================
# Logging
#======================================
M_LOG_LEVEL=DEBUG

#======================================
# Colour control
#======================================
M_CLR_RUNNING=${C_YELLOW}
M_CLR_OK=${C_LIGHT_GREEN}
M_CLR_NOT_OK=${C_RED}

#======================================
# Connection farm 
#======================================
M_CNXN_CTL=/tmp/cnxn
M_SSH_OPTS=" -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no -o ServerAliveInterval=10 -o NumberOfPasswordPrompts=0 -o ForwardAgent=yes "

#======================================
# Messaging
#======================================
M_PROCESS_MSG_Q="SINGLE"
M_MSG_DELIM=","

#======================================
# Database defs
#======================================
M_DB_BUSY="database is busy|database is locked"
M_DB_RETRY=50
M_SQLITE_BUSY=5
M_SQLITE_LOCKED=6

set +a
