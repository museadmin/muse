##                  Released    [n]
##############################################################
assert_not_equal_string()
{
    MU_ASSERTIONS=$(( MU_ASSERTIONS +1 ))
    [[ "${1}" != "${2}" ]] && return 0

    MU_FAILURES=$(( MU_FAILURES +1 ))
    printf "%s\n%s\n" "Expected (${1}) != (${2}) but got (${1}) == (${2})" "${3}"
    
} > "${MU_TMP}/${THIS_TEST_NAME}.rpt"

