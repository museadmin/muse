##############################################################
##
## Name         :   raise_error
## Author       :   Bradley Atkins
## Description  :   Raise an error
## Date         :   04/08/2015
## Args         :   1 - MSG
## Status       :   Reviewed    [n]
##                  Tested      [n]
##                  Released    [n]
##                  Disabled    [n]
##############################################################
raise_error()
{
    MU_ERRORS=$(( MU_ERRORS +1 ))
    printf "\n\t$(( MU_ERROR_INDEX += 1 )) - %s\n" ${THIS_TEST_NAME} 
    printf "\t\t%s\n" "${1}" 
} >> "${MU_TEST_BUF}"
##############################################################
##
## Name         :   raise_failure
## Author       :   Bradley Atkins
## Description  :   Raise a failure
## Date         :   04/08/2015
## Args         :   1 - MSG
## Status       :   Reviewed    [n]
##                  Tested      [n]
##                  Released    [n]
##                  Disabled    [n]
##############################################################
raise_failure()
{
    MU_FAILURES=$(( MU_FAILURES +1 ))
    printf "%s\n" "${1}" 
} > "${MU_TMP}/${THIS_TEST_NAME}.rpt"

##############################################################
##
## Name         :   assert_equal_string
## Author       :   Bradley Atkins
## Description  :   Test two strings for equality
## Date         :   02/08/2015
## Args         :   1 - <Expected String>
##                  2 - <String under test>
##                  3 - [Err msg]
## Status       :   Reviewed    [n]
##                  Tested      [n]
##                  Released    [n]
##############################################################
assert_equal_string()
{
    MU_ASSERTIONS=$(( MU_ASSERTIONS +1 ))
    [[ "${1}" == "${2}" ]] && return 0
    
    MU_FAILURES=$(( MU_FAILURES +1 ))
    printf "%s\n%s\n" "Expected (${1}) == (${2}) but got (${1}) != (${2})" "${3}"

} > "${MU_TMP}/${THIS_TEST_NAME}.rpt"
