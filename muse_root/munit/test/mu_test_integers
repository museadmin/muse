#======================================
# Test integer equality
#======================================
def Test-EqualIntegers-Equal
    assert_equal_integer 100 100
end

def Test-EqualIntegerAndVar-Equal
    INT=100
    assert_equal_integer 100 ${INT}
end

def Test-EqualIntegerLiterals-Unequal
    assert_equal_integer 100 101
end

def Test-EqualIntegerAndVar-Unequal
    INT=101
    assert_equal_integer 100 ${INT}
end

def Test-UnequalIntegers-NotEqual
    assert_not_equal_integer 100 101
end

def Test-UnequalIntegers-Equal
    assert_not_equal_integer 100 100
end

#======================================
# Test integer comparisons
#======================================
def Test-IntegerGreaterThan-True
    assert_greater_than_integer 100 101
end

def Test-IntegerGreaterThan-False
    assert_greater_than_integer 101 100
end

def Test-IntegerLessThan-True
    assert_less_than_integer 100 99
end

def Test-IntegerLessThan-False
    assert_less_than_integer 99 100
end

def Test-IntegerLessThan-FalseWithMsg
    assert_less_than_integer 99 100 "This test should prove false"
end


