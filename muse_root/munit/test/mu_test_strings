#======================================
# Test string equality
#======================================
def Test-EqualStringLiterals-Equal
    assert_equal_string "str1" "str1"
end

def Test-EqualStringLiteralAndVar-Equal
    STR1="str1"
    assert_equal_string "str1" "${STR1}"
end

def Test-EqualStrings-Unequal
    assert_equal_string "str1" "str2"
end

def Test-EqualStrings-UnequalWithMsg
    assert_equal_string "str1" "str2" "str1 and str2 - not equal strings"
end

def Test-UnequalStrings-UnequalWithMsg
    assert_not_equal_string "str1" "str2" "str1 and str2 - equal strings"
end
